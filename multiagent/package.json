{
  "name": "langchain-learn-path-nestjs",
  "version": "1.0.1",
  "main": "index.js",
  "license": "MIT",
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start:debug": "nest start --debug 0.0.0.0:9229 --watch",
    "start:debug:brk": "nest start --debug 0.0.0.0:9229 --watch --debug-brk",
    "start": "NODE_OPTIONS='--network-family-autoselection-attempt-timeout=60000' NODE_OPTIONS=\"--max-old-space-size=3096\" nest start",
    "start:dev": "nest start --watch",
    "start:prod": "NODE_ENV=production rm -rf dist && yarn build && node dist/src/main",
    "lint": "eslint --config .eslint.mjs",
    "test": "jest",
    "patch-version": "npm version patch --no-git-tag-version"
  },
  "dependencies": {
    "@langchain/community": "^1.1.0",
    "@langchain/core": "^1.1.6",
    "@langchain/langgraph": "^1.0.7",
    "@langchain/langgraph-checkpoint-mongodb": "^1.0.0",
    "@langchain/ollama": "^1.1.0",
    "@langchain/tavily": "^1.1.0",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/mongoose": "^11.0.4",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/swagger": "^11.2.3",
    "cache-manager-ioredis-yet": "^2.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "ioredis": "^5.8.2",
    "langgraph-checkpoint-mongodb": "^1.0.0",
    "mongodb": "^6.21.0",
    "mongoose": "^9.0.2",
    "nestjs-pino": "^4.5.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.9",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript-eslint": "^8.50.0"
  }
}
